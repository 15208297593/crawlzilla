#!/bin/bash
bin=`dirname "$0"`
bin=`cd "$bin"; pwd`
. ../conf/crawlzilla-env.sh

# tomcat 

# solr
solr_flag=0;
solr_pid=`ps aux | grep "$SOLR_HOME/example/start.jar" | awk 'NR==1 {print " " $2}'`
solr_temp_pid=`ps aux | grep "$SOLR_HOME/example/start.jar" | awk 'NR==1 {print " " $2}'`
if [ "$solr_pid" == "$solr_temp_pid" ];then
    solr_flag=1;
    echo $solr_pid
fi

if [ "$solr_flag" == "1" ]; then
    show_echo "Solr Started !"
fi
